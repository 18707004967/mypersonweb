/**index.wxss**/
.wrapper{
	background: #8849d1 url('https://niceduang.gitee.io/pages/wx-paper/assets/imgs/bg.png') 50% 0 no-repeat;
	background-size: cover;
}
.page-index-bar{
	position: relative;
	width: 690rpx;
	margin: 0 auto;
	padding: 36rpx 0;
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	align-items: center;
	height: 70rpx;
}
.page-index-bar text{
	max-width: 85%;
	font-size: 50rpx;
	color: #fff;
}
.page-index-bar .icon-me{
	width: 70rpx;
	height: 70rpx;
	font-size: 0;
	overflow: hidden;
	background: url('https://niceduang.gitee.io/pages/wx-paper/assets/imgs/me.png') 50% 50% no-repeat;
	background-size: 100% 100%;
  border-radius: 50%;
}
.page-index-label{
	position: relative;
	width: 690rpx;
	height: 80rpx;
	margin: 0 auto;
	background-color: rgba(255,255,255,0.8);
	border-radius: 10rpx;
	font-size: 26rpx;
}
.page-index-label input{
	background: none;
	outline: none;
	border: none;
	box-sizing: border-box;
	width: 85%;
	height: 100%;
	padding: 0 20rpx;
	font: inherit;
}
.page-index-label .icon-search{
	position: absolute;
	top: 50%;
	margin-top: -20rpx;
	right: 20rpx;
	font-size: 0;
	text-indent: -9999px;
	overflow: hidden;
	width: 40rpx;
	height: 40rpx;
	background: url('https://niceduang.gitee.io/pages/wx-paper/assets/imgs/search.png') 50% 50% no-repeat;
	background-size: 100% 100%;
}
.btn-create{
	width: 100%;
	height: 90rpx;
	background: url('https://niceduang.gitee.io/pages/wx-paper/assets/imgs/create_btn.png') 50% 0 no-repeat;
	background-size: cover;
}